@model Chatbot.ViewModels.StatisticsViewModel

@{
}

<h2>Number of Users</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Females</th>
            <th scope="col">Males</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>@(Model.UsersCount.FirstOrDefault(x => x.Key == "Females").Value)</th>
            <th>@(Model.UsersCount.FirstOrDefault(x => x.Key == "Males").Value)</th>
        </tr>
    </tbody>
</table>

<h2>Top 10 Used Words</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Word</th>
            <th scope="col">Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TopUsedWords)
        {
            <tr>

                <th>@item.Key</th>
                <th>@item.Value</th>
            </tr>
        }
    </tbody>
</table>

